---
import { Icon } from "astro-icon/components";
interface Props {
  name: string;
  href: string;
  icon?: string;
  class?: string;
}

const { href, name, icon, class: className } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  aria-label={`Visitar ${name}`}
  class={`bg-shakespeare-800/50 hover:bg-shakespeare-700/50 transition-all duration-300 ease-smooth-out hover:scale-110 hover:shadow-lg hover:shadow-shakespeare-500/20 text-white font-semibold py-2 px-4 sm:px-6 rounded-full flex items-center gap-x-2 text-sm sm:text-base ${className || ""}`}
>
  {icon && <Icon name={icon} class="w-5 h-5 flex-shrink-0" />}
  <span>{name}</span>
</a>
