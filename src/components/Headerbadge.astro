---
import { Icon } from "astro-icon/components";
interface Props {
  href: string;
  name: string;
  nameKey?: string;
  icon: string;
}

const { href, name, nameKey, icon } = Astro.props;
const sectionId = href.replace("#", "");
---

<a
  href={href}
  class="nav-link group relative flex items-center justify-center text-slate-100 hover:text-shakespeare-300 transition-all duration-300 ease-smooth-out hover:scale-110 p-2.5 sm:p-3 rounded-full hover:bg-shakespeare-500/10"
  aria-label={name}
  data-section={sectionId}
>
  <Icon
    name={icon}
    class="size-5 sm:size-6 transition-all duration-300 group-hover:scale-110"
    aria-hidden="true"
  />

  <span
    class="absolute right-full mr-2 sm:mr-3 px-2.5 sm:px-3 py-1 sm:py-1.5 bg-slate-900/95 backdrop-blur-md text-xs sm:text-sm font-medium rounded-lg opacity-0 pointer-events-none group-hover:opacity-100 transition-all duration-300 whitespace-nowrap ring-1 ring-white/10 shadow-lg text-white"
    aria-hidden="true"
    data-i18n={nameKey}
  >
    {name}
  </span>
</a>
