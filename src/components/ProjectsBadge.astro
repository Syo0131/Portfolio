---
import { Icon } from 'astro-icon/components';
import OptimizedImage from './OptimizedImage.astro';


interface Props {
  name: string;
  description: string;
  category: string;
  technologies: string[];
  urlDemo: string;
  urlGit: string;
  srcImage: string;
}

const { name, urlDemo, urlGit, srcImage, category, description, technologies } = Astro.props;
---

<article
  class="group relative rounded-xl overflow-hidden shadow-lg h-[320px] sm:h-[380px] md:h-[420px] lg:h-[450px] xl:h-[480px] transition-all duration-[800ms] ease-smooth-out hover:shadow-xl cursor-pointer"
>
  <OptimizedImage
    src={srcImage}
    alt={name}
    width={800}
    height={600}
    class="absolute inset-0 w-full h-full object-cover transition-transform duration-[1000ms] ease-smooth-out group-hover:scale-105"
  />
  <div
    class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent transition-all duration-[800ms] ease-smooth-out group-hover:from-black/90"
  >
  </div>

  <div
    class="relative h-full flex flex-col justify-end p-4 sm:p-5 md:p-6 lg:p-7 transition-all duration-[800ms] ease-smooth-out group-hover:-translate-y-2 z-10"
  >
    <div class="flex flex-col gap-2 items-start mb-2 sm:mb-3">
      <span
        class="bg-shakespeare-800 text-white font-semibold py-1.5 sm:py-2 px-3 sm:px-4 md:px-5 lg:px-6 rounded-full text-xs sm:text-sm md:text-base transition-colors duration-300"
      >
        {name}
      </span>
      <span
        class="bg-shakespeare-800 text-shakespeare-300 font-semibold py-1.5 sm:py-2 px-3 sm:px-4 md:px-5 lg:px-6 rounded-full text-xs sm:text-sm transition-colors duration-300"
      >
       {category}
      </span>
    </div>

    <div
      class="mt-3 sm:mt-4 max-h-0 group-hover:max-h-96 opacity-0 group-hover:opacity-100 transition-all duration-[1000ms] ease-smooth-out overflow-hidden"
    >
      <div class="flex flex-wrap gap-1.5 sm:gap-2 mb-3 sm:mb-4">
       {technologies.map((tech) => (
                 <span
            class="bg-shakespeare-800 text-shakespeare-200 text-xs sm:text-sm font-semibold px-2 sm:px-2.5 py-0.5 sm:py-1 rounded-full"
          >{tech}
          </span>
       ))}
      </div>
      <p
        class="text-white text-xs sm:text-sm md:text-base mb-3 sm:mb-4 leading-relaxed"
      >
        {description}
      </p>
      <div class="flex items-center gap-x-3 sm:gap-x-4">
        <a
          href={urlDemo}
          target="_blank"
          rel="noopener noreferrer"
          class="text-slate-200 hover:text-shakespeare-300 transition-all duration-500 ease-smooth-out hover:scale-110"
          title={name}
        >
          <Icon name="mdi:external-link" class="size-5 sm:size-6" />
        </a>
        <a
          href={urlGit}
          target="_blank"
          rel="noopener noreferrer"
          class="text-slate-200 hover:text-shakespeare-300 transition-all duration-500 ease-smooth-out hover:scale-110"
          title="CÃ³digo Fuente"
        >
          <Icon name="mdi:github" class="size-5 sm:size-6" />
        </a>
      </div>
    </div>
  </div>
</article>
