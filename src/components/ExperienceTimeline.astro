---
interface Props {
  position: string;
  company: string;
  period: string;
  alignment?: 'left' | 'right';
  typecontrat?: string;
}
const { position, company, period, alignment = 'right', typecontrat } = Astro.props;

const alignmentClasses =
  alignment === 'right'
    ? 'sm:w-1/2 sm:pr-8 sm:text-right sm:ml-0'
    : 'sm:w-1/2 sm:pl-8 sm:text-left sm:ml-auto';
---

<div class="relative mb-12 pl-8 sm:pl-0">
  <!-- Punto en la lÃ­nea de tiempo -->
  <div
    class="absolute left-[13px] sm:left-1/2 sm:-translate-x-1/2 w-3 h-3 sm:w-4 sm:h-4 bg-shakespeare-400 rounded-full ring-4 sm:ring-8 ring-slate-900"
  >
  </div>

  <!-- Contenido -->
  <div class={alignmentClasses}>
    <h3 class="text-lg sm:text-xl md:text-2xl font-semibold text-slate-100">
      {position}
    </h3>
    <p class="text-base sm:text-lg font-semibold text-shakespeare-400">
      {company}
    </p>
    <time class="block text-xs sm:text-sm text-slate-400 mb-2">
      {period}
    </time>
    <span class="block text-xs  sm:text-sm text-slate-400 mb-2">{typecontrat}</span>
  </div>
</div>
